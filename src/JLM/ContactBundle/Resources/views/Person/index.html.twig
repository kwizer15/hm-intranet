{% extends '::layout.html.twig' %}

{% block content %}
    <h1>Liste des Person</h1>

    <table class="table table-stripped">
        <thead>
            <tr>                <th>Id</th>                <th>Title</th>                <th>Firstname</th>                <th>Lastname</th>                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>                <td><a href="{{ path('person_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>                <td>{{ entity.title }}</td>                <td>{{ entity.firstName }}</td>                <td>{{ entity.lastName }}</td>                <td>				<div class="form-actions">                        <a href="{{ path('person_show', { 'id': entity.id }) }}" class="btn">show</a>                        <a href="{{ path('person_edit', { 'id': entity.id }) }}" class="btn">edit</a>				</div>                </td>            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock content %}
