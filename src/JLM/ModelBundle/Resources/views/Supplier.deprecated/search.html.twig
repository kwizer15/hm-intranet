<table class="table table-stripped">
    <thead>
        <tr>
        	<th></th>
            <th>Nom</th>
            <th>Téléphone</th>
            <th>Fax</th>
            <th>E-mail</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in suppliers %}
        <tr>
        	<td>
                <a href="{{ path('supplier_show', { 'id': entity.id }) }}" class="btn"><i class="icon-eye-open"></i></a>
            </td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.phone }}</td>
            <td>{{ entity.fax }}</td>
            <td>{% if entity.email %}<a href="mailto:{{ entity.email }}">{{ entity.email }}</a>{% endif %}</td>
            
        </tr>
    {% endfor %}
    </tbody>
</table>