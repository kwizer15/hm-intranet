{% extends "JLMOfficeBundle:Askquote:layout.html.twig" %}

{% block content %}
<h1>Demande de devis</h1>
<div class="row-fluid">
    <div class="span5">
    	<strong>Demande du {{ entity.creation | date('d/m/Y') }} par {{ entity.method }}
    	<br>Échéance le : {{ entity.maturity | date('d/m/Y') }}
        <br><br>{% if entity.door %}{{ entity.door | nl2br }}{% else %}{{ entity.site | nl2br }}{% endif %}</strong>
    </div>
    <div class="span5 offset2 well">
    	<strong>{{ entity.trustee }}</strong>
        <br>{{ entity.trustee.address | nl2br  }}
    </div>
</div>
<div class="row-fluid">
    <div class="span12 well">
		<h4>Objet :</h4>
		<p>{{ entity.ask }}</p>
	</div>
</div>
<div class="form-actions">
<a href="/{{ entity.webPath }}" class="btn btn-info"><i class="icon-file icon-white"></i> Fichier joint</a>
<a href="{{ path('quote_new') }}" class="btn btn-success"><i class="icon-white icon-plus-sign"></i> Nouveau devis</a>
</div>
{% if entity.quotes|length %}
<h4>Devis</h4>
<ul>
{% for quote in entity.quotes %}
<li><a href="{{ path('quote_show',{'id':quote.id}) }}">Devis n°{{ quote.number }}</a></li>
{% endfor %}
</ul>
{% else %}
<h4>Non traité</h4>
{% endif %}
{% endblock %}