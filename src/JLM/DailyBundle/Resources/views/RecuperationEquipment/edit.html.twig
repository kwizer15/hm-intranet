{# JLMDailyBundle:RecuperationEquipment:edit.html.twig #}
{% extends "JLMDailyBundle::layout.html.twig" %}

{% block content %}
<h1>Récupération matériel</h1>
<h4>{{ entity.technician}}</h4>
<dl>
<dt>Lieu</dt>
<dd>{{ entity.shifting.place | nl2br }}</dd>
<dt>Matériel</dt>
<dd>{{ entity.shifting.reason | nl2br }}</dd>
</dl>
<form action="{{ path('recuperationequipment_update',{'id':entity.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
<fieldset>
{{ form_widget(form) }}
    <div class="form-actions">
	   <a href="{{ path('daily') }}" class="btn"><i class="icon-arrow-left"></i> Retour à la liste</a>
	   <button type="submit" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Enregistrer les modifications</button>
	</div>
	</fieldset>
</form>
{% endblock %}