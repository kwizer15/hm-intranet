{% extends "JLMOfficeBundle:Quote:layout.html.twig" %}

{% block content %}
<h1>Liste des devis</h1>

<table class="table table-stripped">
    <thead>
        <tr>
            <th>#</th>
            <th>Date</th>
            <th>Affaire</th>
            <th>Installation</th>
            <th>Syndic</th>
            <th>Var.</th>
			<th></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>
            	<a href="{{ path('quote_show', { 'id': entity.id }) }}">{{ entity.number }}</a><br>
            	{% include 'JLMOfficeBundle:Quote:statelabel.html.twig' with {'state': entity.state} %}
            </td>
            <td>{% if entity.creation %}{{ entity.creation|date('d/m/Y') }}{% endif %}</td>
            <td>
            {% if entity.door %}<strong>{{ entity.door.site.address.city.name | upper }}</strong> <small>{{ entity.door.site.address.city.zip }}</small><br>{{ entity.door.street | nl2br }}
            {% else %}{{ entity.doorCp | nl2br}}
            {% endif %}
            </td>
            <td>{% if entity.door %}{{ entity.door.type }}<br>{{ entity.door.location }}{% endif %}</td>
            <td>{{ entity.trusteeName }}</td>
            <td>{{ entity.variants|length }}</td>
            <td>
                <a href="{{ path('quote_show', { 'id': entity.id }) }}" class="btn"><i class="icon-eye-open"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<div class="pagination pagination-centered">
	<ul>
	    <li{% if page == 1 %} class="disabled"{% endif %}><a href="{% if state is null %}{{ path('quote_page',{ 'page' : page-1 }) }}{% else %}{{ path('quote_state',{ 'page' : page-1 , 'state' : state }) }}{% endif %}">«</a></li>
		{% for p in range(1,nbPages) %}
		<li{% if p == page %} class="active"{% endif %}><a href="{% if state is null %}{{ path('quote_page',{ 'page' : p }) }}{% else %}{{ path('quote_state',{ 'page' : p , 'state' : state }) }}{% endif %}">{{ p }}</a></li>
		{% endfor %}
		<li{% if page == nbPages %} class="disabled"{% endif %}><a href="{% if state is null %}{{ path('quote_page',{ 'page' : page+1 }) }}{% else %}{{ path('quote_state',{ 'page' : page+1 , 'state' : state }) }}{% endif %}">»</a></li>
	</ul>
</div>
<div class="form-actions">
<a href="{{ path('quote_new') }}" class="btn btn-primary"><i class="icon-plus-sign icon-white"></i> Créer un nouveau devis</a>
</div>
{% endblock %}
