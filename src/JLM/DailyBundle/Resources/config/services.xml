<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="jlm_daily.type.intervention_hidden" class="JLM\DailyBundle\Form\Type\InterventionHiddenType">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <tag name="form.type" alias="intervention_hidden" />
        </service>
        <service id="jlm_daily.eventlistener.action_listener" class="JLM\DailyBundle\EventListener\DateSearchListener">
        	<argument type="service" id="form.factory"/>
    		<tag name="kernel.event_listener" event="kernel.view" method="onKernelResponse" />
		</service>
		<service id="jlm_commerce.twig.interventioncount_extension" class="JLM\DailyBundle\Twig\Extension\InterventionCountExtension">
        	<argument type="service" id="doctrine.orm.entity_manager"/>
    		<tag name="twig.extension" />
    	</service>
    </services>    
</container>
