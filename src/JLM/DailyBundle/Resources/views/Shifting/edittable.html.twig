<form action="{{ path('shifting_update',{'id':entity.id}) }}" method="post" {{ form_enctype(form) }} class="hide">
<tr>
	<td>{{ entity.technician }}</td>	
	<td>{{ form_widget(form.begin) }}</td>
	<td>{{ form_widget(form.end) }}</td>
	<td></td>
	<td>{{ form_widget(form.comment) }}</td>
	<td>
		{{ form_rest(form) }}
		<button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Fermer</button>
		<button type="submit" class="btn btn-primary">{{ 'pencil'|icon(true) }} Enregistrer</button>
	</td>
	</tr>
</form>