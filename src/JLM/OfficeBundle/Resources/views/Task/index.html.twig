{% extends "JLMOfficeBundle::layout.html.twig" %}

{% block content %}
<h1>Liste des tâches</h1>

<table class="table table-stripped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Intervention</th>
            <th>Rapport</th>
            <th>A faire</th>
			<th></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
    	<tr>
            <th>{{ entity.open | date('d/m/Y') }}</th>
            <th>{{ entity.intervention.place }}</th>
            <th>{{ entity.intervention.report }}</th>
            <th><a href="{{ entity.url }}">{{ entity.todo }}</a></th>
			<th><a href="{{ path('task_close',{'id':entity.id}) }}" class="btn btn-primary">Fait</a></th>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="pagination pagination-centered">
	<ul>
	    <li{% if page == 1 %} class="disabled"{% endif %}><a href="{{ path('quote_page',{ 'page' : page-1 }) }}">«</a></li>
		{% for p in range(1,nbPages) %}
		<li{% if p == page %} class="active"{% endif %}><a href="{{ path('quote_page',{ 'page' : p }) }}">{{ p }}</a></li>
		{% endfor %}
		<li{% if page == nbPages %} class="disabled"{% endif %}><a href="{{ path('quote_page',{ 'page' : page+1 }) }}">»</a></li>
	</ul>
</div>
{% endblock %}