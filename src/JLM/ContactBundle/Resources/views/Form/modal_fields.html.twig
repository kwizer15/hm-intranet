{% extends 'JLMCoreBundle:Form:horizontal.html.twig' %}

{% block form %}
{{ form_start(form, {'attr': {'id': form.vars.id,
							  'class': 'modal hide fade', 
                              'role': 'dialog', 
                              'aria-labelledby': form.vars.id ~ '_modalLabel',
                              'aria-hidden': 'true'} } ) }}
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="{{ form.vars.id }}_modalLabel">{{ label|trans({}, translation_domain) }}</h3>
  </div>
  <div class="modal-body">
    {{ form_errors(form) }}
    {{ form_widget(form) }}
  </div>
  <div class="modal-footer">
    <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Fermer</button>
    {{ form_rest(form) }}
