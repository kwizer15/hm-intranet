{% block content %}
<h1>Liste des types d'emetteurs</h1>

<ul>
    {% for entity in entities %}
	<li>
		<a href="#modalEdit{{ entity.id }}" role="button" data-toggle="modal">{{ entity.name }}</a>
		{% render 'JLMModelBundle:TransmitterType:edit' with {'id':entity.id} %}
	</li>
    {% endfor %}
</ul>
<div class="form-actions">
<a href="#modalNew" class="btn btn-primary" role="button" data-toggle="modal"><i class="icon-plus-sign icon-white"></i> Cr√©er un nouveau type d'emetteur</a>
{% render 'JLMModelBundle:TransmitterType:new' %}
</div>
{% endblock %}
