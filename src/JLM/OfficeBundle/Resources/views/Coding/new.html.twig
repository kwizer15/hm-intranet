{% extends "JLMOfficeBundle::layout.html.twig" %}
{% form_theme form with 'JLMOfficeBundle:Form:coding.html.twig' %}
{% block content %}
<h1>Nouveau chiffrage</h1>
{% if form_errors(form) %}
<div class="alert">{{ form_errors(form) }}</div>
{% endif %}
<form action="{{ path('coding_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <fieldset>
    {{ form_widget(form) }}
	<div class="form-actions">
	 
	   <button type="submit" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Enregistrer les modifications</button>
	</div>
</fieldset>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset("bundles/jlmoffice/js/coding.js") }}"></script>
<script>
$("body").coding({
	 autoSource:'{{ path('autocomplete') }}',
	 lineCount:{{ form.lines | length }}
});
</script>
{% endblock %}