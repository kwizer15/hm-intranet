{% extends "JLMDailyBundle::layout.html.twig" %}

{% block content %}
<h1>Intervention</h1>
<div class="alert{% if entity.priority < 3 %} alert-error{% elseif entity.priority > 4 %} alert-info{% endif %}">
{% if entity.priority == 1 %}TRES URGENT
{% elseif entity.priority == 2 %}Urgent
{% elseif entity.priority == 3 %}Haute
{% elseif entity.priority == 4 %}Normal
{% elseif entity.priority == 5 %}Basse
{% else %}Très basse
{% endif %}
</div>
<table class="table table-bordered">
    <tbody>
		<tr>
			<th>Lieu de l'intervention</th>
			<td>{{ entity.door | nl2br }}</td>
		</tr>
		<tr>
			<th>Action</th>
			<td>{{ entity.actionType }}</td>
		</tr>
        <tr>
            <th>Création</th>
            <td>{{ entity.creation|date('d/m/Y H:i') }}</td>
        </tr>
        <tr>
            <th>Contact</th>
            <td>{{ entity.contactName }}</td>
        </tr>
        <tr>
            <th>Téléphones</th>
            <td>{{ entity.contactPhones }}</td>
        </tr>
        <tr>
            <th>e-mail</th>
            <td><a href="mailto:{{ entity.contactEmail}}">{{ entity.contactEmail}}</a></td>
        </tr>
        <tr>
            <th>Raison</th>
            <td>{{ entity.reason }}</td>
        </tr>
    </tbody>
</table>

<div class="form-actions">
    <a href="{{ path('interventionplanned') }}" class="btn"><i class="icon-arrow-left"></i> Retour à la liste</a>
    <a href="{{ path('interventionplanned_edit', { 'id': entity.id }) }}" class="btn btn-warning"><i class="icon-pencil icon-white"></i> Editer</a>
	<a href="{{ path('interventionplanned_show', { 'id': entity.id }) }}" class="btn btn-primary"><i class="icon-calendar icon-white"></i> Programmer l'intervention</a> 
</div>
{% endblock %}