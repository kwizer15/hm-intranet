{% extends 'KwizerModalBundle::modal_layout.html.twig' %}

{% block header %}
{{ entity.name }}
{% endblock %}

{% block body %}
    <table class="table">
        <tbody>            <tr>
                <th>Id</th>                <td>{{ entity.id }}</td>            </tr>            <tr>
                <th>Title</th>                <td>{{ entity.title }}</td>            </tr>            <tr>
                <th>Firstname</th>                <td>{{ entity.firstName }}</td>            </tr>            <tr>
                <th>Lastname</th>                <td>{{ entity.lastName }}</td>            </tr>        </tbody>
    </table>
{% endblock %}

{% block footer %}
    <a href="{{ path('jlm_contact_person_edit', { 'id': entity.id }) }}" class="btn btn-warning"><i class="icon-pencil icon-white"></i> Editer</a>
{% endblock %}
