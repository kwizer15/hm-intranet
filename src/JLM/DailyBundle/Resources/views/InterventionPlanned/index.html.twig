{% extends "JLMDailyBundle::layout.html.twig" %}

{% block content %}
<h1>Liste des interventions</h1>

<table class="table table-stripped">
    <thead>
        <tr>
       		<th>Priorité</th>
            <th>Date</th>
            <th>Adresse</th>
            <th>Contact</th>
            <th>Téléphones</th>
            <th>Raison</th>  
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
        	<td>
        		<span class="label label-{% if entity.priority < 3 %}important{% elseif entity.priority > 4 %}info{% else %}warning{% endif %}">
{% if entity.priority == 1 %}TRES URGENT
{% elseif entity.priority == 2 %}Urgent
{% elseif entity.priority == 3 %}Haute
{% elseif entity.priority == 4 %}Normal
{% elseif entity.priority == 5 %}Basse
{% else %}Très basse
{% endif %}
        		</span>
        		<br>{{ entity.actionType }}
        	</td>
            <td>{% if entity.creation %}{{ entity.creation|date('d/m/Y') }}{% endif %}</td>
            <td><a href="{{ path('interventionplanned_show', { 'id': entity.id }) }}">{{ entity.doorCp | nl2br }}</a></td>
            <td>{{ entity.contactName }}</td>
            <td>{{ entity.contactPhones | nl2br }}</td>
            <td>{{ entity.reason | nl2br }}</td>
            <td>
            	<a href="{{ path('interventionplanned_show', { 'id': entity.id }) }}" class="btn"><i class="icon-eye-open"></i></a>
                <a href="{{ path('interventionplanned_edit', { 'id': entity.id }) }}" class="btn btn-warning"><i class="icon-white icon-pencil"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{#
<div class="pagination pagination-centered">
	<ul>
	    <li{% if page == 1 %} class="disabled"{% endif %}><a href="{{ path('supplier_page',{ 'page' : page-1 }) }}">«</a></li>
		{% for p in range(1,nbPages) %}
		<li{% if p == page %} class="active"{% endif %}><a href="{{ path('supplier_page',{ 'page' : p }) }}">{{ p }}</a></li>
		{% endfor %}
		<li{% if page == nbPages %} class="disabled"{% endif %}><a href="{{ path('supplier_page',{ 'page' : page+1 }) }}">»</a></li>
	</ul>
</div>#}
<div class="form-actions">
	<a href="{{ path('interventionplanned_new') }}" class="btn btn-primary"><i class="icon-plus-sign icon-white"></i> Créer une nouvelle intervention</a>
</div>
{% endblock %}