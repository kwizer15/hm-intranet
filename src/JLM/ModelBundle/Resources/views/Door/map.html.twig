<!DOCTYPE html>
<html>
  <head>
    <style type="text/css">
      html, body { height: 100%; margin: 0; padding: 0; }
      #map { height: 100%; }
    </style>
  </head>
  <body>
    <div id="map"></div>
    <script type="text/javascript">

var map;
function initMap() {
  map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: {{ latCenter }}, lng: {{ lngCenter }}},
    zoom: 10
  });

  {% for entity in entities %}
  var marker{{ entity.id }} = new google.maps.Marker({
	    position: {lat: {{ entity.latitude }}, lng: {{ entity.longitude }}},
	    map: map,
	    title: "{{ entity.code }}"
	  });
  {% endfor %}
}

    </script>
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCoyLRuJCsmyvWIvTAsFF-qXaLih6ZgbZ4&callback=initMap">
    </script>
  </body>
</html>