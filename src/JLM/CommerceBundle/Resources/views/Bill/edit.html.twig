{% extends "JLMCommerceBundle:Bill:layout.html.twig" %}

{% block page_header %}
<h1>Facture <small>{{ entity.number }}</small></h1>
{% endblock %}

{% block content %}
{{ form(edit_form) }}
{% endblock %}

{% block javascripts %}
{{ parent() }}
    {% javascripts
    	'@JLMCommerceBundle/Resources/public/js/bill.js'
        filter='yui_js' %}
    	<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
<script>
$("body").bill({
	 autoSource:'{{ path('autocomplete') }}',
	 lineCount:{{ edit_form.lines | length }},
});
</script>
{% endblock %}
