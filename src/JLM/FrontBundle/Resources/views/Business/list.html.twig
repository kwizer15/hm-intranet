                <strong>{{ door.code }}</strong> &middot; {{ door.type }} / {{ door.location }}
                <span class="pull-right label
	                {%- if door.stopped %} label-danger
	                {%- elseif door.waitFixing %} label-warning
	                {%- else %} label-success
	                {%- endif -%}
