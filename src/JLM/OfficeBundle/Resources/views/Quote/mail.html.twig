{% extends "JLMOfficeBundle::layout.html.twig" %}
{% form_theme form 'JLMOfficeBundle:Form:field_row.html.twig' %}
{% block content %}
<h1>Envoyer un devis par e-mail</h1>
<form action="{{ path('quote_send',{'id': entity.id }) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <fieldset>
    {{ form_widget(form) }}
    <div class="control-group">
		<label class="control-label required">Pi√®ce jointe</label>
		<div class="controls">
			<div class="input-prepend">
				<span class="add-on"><i class="icon-file"></i></span>
				<span class="input-xlarge uneditable-input">{{ entity.number }}.pdf</span>
			</div>
		</div>
	</div>
	<div class="form-actions">
	   <button type="submit" class="btn btn-primary"><i class="icon-share-alt icon-white"></i> Envoyer</button>
	</div>
</fieldset>
{% endblock %}