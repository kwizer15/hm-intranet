{% extends "JLMCommerceBundle:Bill:layout.html.twig" %}
{% form_theme form with 'JLMCommerceBundle:Form:bill.html.twig' %}
{% block content %}
<h1>Nouvelle facture</h1>
{% if form_errors(form) %}
<div class="alert">{{ form_errors(form) }}</div>
{% endif %}
<form action="{{ path('bill_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <fieldset>
    <input type="hidden" value="{{ (entity.vatTransmitter*100) | number_format(1,',',' ') }}" id="jlm_commerce_bill_vatTransmitter">
    {{ form_widget(form) }}
	<div class="form-actions">
	  <a href="{{ path('bill') }}" class="btn"><i class="icon-arrow-left"></i> Retour Ã  la liste</a>
	  <button type="submit" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Enregistrer les modifications</button>
	</div>
</fieldset>
</form>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% javascripts
    	'@JLMCommerceBundle/Resources/public/js/bill.js'
        filter='yui_js' %}
    	<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
<script>
$("body").bill({
	 autoSource:'{{ path('autocomplete') }}',
	 lineCount:{{ form.lines | length }},
});
</script>
{% endblock %}
