{# JLMDailyBundle:Intervention:list.html.twig #}

<table class="table table-stripped">
	<thead>
		<tr>
			<th>Date</th>
			<th>Installation</th>
			<th>Interlocuteur</th>
			<th>Info</th>
			<th>Techniciens</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{% for entity in entities %}
		<tr>
			<td>{% include "JLMDailyBundle:Default:priority.html.twig" with {'priority' : entity.priority} %}<br>{{ entity.creation|date('d/m/Y') }}<br>{{ entity.creation|date('H:i') }}</td>
			<td><a href="{{ path('intervention_redirect',{'id':entity.id, 'act':'show'}) }}">{{ entity.door.site.address.street | nl2br }}<br><strong>{{ entity.door.site.address.city.name }}</strong> ({{ entity.door.site.address.city.zip }})</a></td>
			<td>{{ entity.contactName }}<br>{{ entity.contactPhones | nl2br }}</td>
			<td><strong>{{ entity.door.type }} - {{ entity.door.location }}</strong><br>{{ entity.reason | nl2br }}</td>
			<td>
				{% for shift in entity.shiftTechnicians %}
				{% if shift.end %}
				{{ shift.begin | date('d/m/Y')}} - <strong>{{ shift.technician }}</strong> ({{ shift.time.format('%hh%I') }})<br>
				{% else %}
				<a href="{{ path('shifting_edit',{'id':shift.id}) }}">{{ shift.begin | date('d/m/Y')}} - <strong>{{ shift.technician }}</strong></a><br>
				{% endif %}
				{% endfor %}
				<a href="{{ path('shifting_new',{'id':entity.id}) }}" class="btn"><i class="icon-plus-sign"></i> Ajouter</a>
			</td>
			<td>
			{% if entity.closed %}
				Clotur√©e
			{% else %}<strong>{% include "JLMDailyBundle:Intervention:type.html.twig" with {'type' : entity.type} %}</strong><br>
				<a href="{{ path('intervention_redirect',{'id':entity.id, 'act':'show'}) }}" class="btn"><i class="icon-eye-open"></i></a>
				<a href="{{ path('intervention_redirect',{'id':entity.id, 'act':'edit'}) }}" class="btn btn-warning"><i class="icon-pencil icon-white"></i></a>
				<a href="{{ path('intervention_redirect',{'id':entity.id, 'act':'close'}) }}" class="btn btn-primary"><i class="icon-ok icon-white"></i></a>
			{% endif %}
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
