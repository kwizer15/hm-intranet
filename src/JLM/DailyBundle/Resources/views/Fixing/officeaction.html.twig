{% if entity.due.id == 1 %}
	{% if entity.done.id == 1 or entity.done.id == 2 %}
		{% if entity.completeContract %}
			<a href="{{ path('intervention_generatetask',{'id' : entity.id, 'type' : 5 }) }}" class="btn btn-primary">Ne pas facturer</a>
		{% else %}
			<a href="{{ path('intervention_generatetask',{'id' : entity.id, 'type' : 1 }) }}" class="btn btn-primary">Facturer</a>
			<a href="{{ path('intervention_generatetask',{'id' : entity.id, 'type' : 5 }) }}" class="btn">Ne pas facturer</a>
		{% endif %}
	{% elseif entity.done.id == 3 %}
		{% if entity.completeContract %}
			<a href="{{ path('intervention_generatetask',{'id' : entity.id, 'type' : 5 }) }}" class="btn">Ne pas facturer</a>
		{% else %}
			<a href="{{ path('intervention_generatetask',{'id' : entity.id, 'type' : 5 }) }}" class="btn">Ne pas facturer</a>
		{% endif %}
	{% endif %}
{% elseif entity.due.id == 2 %}
	{% if entity.done.id == 1  or entity.done.id == 2 %}
		<a href="{{ path('intervention_generatetask',{'id' : entity.id, 'type' : 1 }) }}" class="btn btn-primary">Facturer</a>
	{% elseif entity.done.id == 3 %}
		<a href="{{ path('intervention_generatetask',{'id' : entity.id, 'type' : 5 }) }}" class="btn btn-primary">Ne pas facturer</a>
	{% endif %}
{% elseif entity.due.id == 3 or entity.due.id == 4 %}
