{% extends 'JLMContactBundle::layout.html.twig' %}

{% block content %}
    <h1>Liste des personnes</h1>

    <table class="table table-stripped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('jlm_contact_person_show', { 'id' : entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                    <a href="{{ path('jlm_contact_person_show', { 'id' : entity.id }) }}" class="btn">show</a>
                    <a href="{{ path('jlm_contact_person_edit', { 'id' : entity.id }) }}" class="btn">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock content %}
