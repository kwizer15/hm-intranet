{% extends "JLMTransmitterBundle:Attribution:layout.html.twig" %}

{% block content %}
<h1>Attributions d'émetteurs</h1>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Affaire</th>
            <th>Nb de bips</th>
            <th>Contact</th>
            <th>Particulier</th>
            <th>Facturation</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{% if entity.creation %}{{ entity.creation|date('d/m/Y') }}{% endif %}</td>
            <td><a href="{{ path('transmitter_attribution_show', { 'id': entity.id }) }}">{{ entity.ask.site.address |nl2br }}</a></td>
            <td>{{ entity.transmitters|length }}</td>
            <td>{{ entity.contact }}</td>
            <td>{% if entity.individual %}<i class="icon-ok"></i>{% endif %}</td>
            <td>
            	{% if entity.bill %}
            	{% include 'JLMCommerceBundle:Bill:statelabel.html.twig' with {'state': entity.bill.state} %}
            	<br><a href="{{ path('bill_show', { 'id': entity.id }) }}">{{ entity.bill.number }}</a>
            	{% else %}
            	Non facturé
            	{% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
