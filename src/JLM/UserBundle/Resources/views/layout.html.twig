{%  extends "::layout.html.twig" %}

{% block container %}
		<div class="container">
			<div class="span3"></div>
			<div class="span6">
				<div class="page-header">
					<h1>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					{% image '@JLMUserBundle/Resources/public/img/jlm-logo.png' filter='optipng' %}
    				<img src="{{ asset_url }}" alt="JLM Entreprise"/>
					{% endimage %}
					</h1>
				</div>
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="well">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
        </div>
	        <div class="span3"></div>
        </div>
{% endblock %}