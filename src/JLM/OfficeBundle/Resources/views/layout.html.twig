{% extends "::layout.html.twig" %}

{% block container %}
    <div class="row-fluid">
    
	    <div class="span2">
		    {% block sidebar %}
		        <form  action="{{ path('quote_search') }}" method="post" class="form-search">
					<input type="text" class="search-query input-block-level" name="query" placeholder="Rechercher...">
			    </form>
		    <ul class="nav nav-list">
		    	<li><a href="{{ path('quote') }}">Liste des devis</a></li>
		    	<li class="divider"></li>
				{% render "JLMOfficeBundle:Quote:last" with {'limit': 10} %}
			</ul>
		    {% endblock sidebar %}
		    
	    </div>
	    <div class="span10">
            {% block content %}
            {% endblock content %}
	    </div>
    </div>
{% endblock container %}
