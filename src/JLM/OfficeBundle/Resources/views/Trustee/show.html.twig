{% extends "JLMOfficeBundle::layout.html.twig" %}

{% block content %}
<h1>Trustee</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Accession</th>
            <td>{{ entity.accession }}</td>
        </tr>
        <tr>
            <th>Accountnumber</th>
            <td>{{ entity.accountNumber }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('trustee') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('trustee_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('trustee_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}