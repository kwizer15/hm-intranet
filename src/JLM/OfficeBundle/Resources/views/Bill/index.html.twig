{% extends "JLMOfficeBundle:Bill:layout.html.twig" %}
{% block content %}
<h1>Liste des factures</h1>
<table class="table table-stripped">
    <thead>
        <tr>
            <th>#</th>
            <th>Date</th>
            <th>Syndic</th>
            <th>Affaire</th>
            <th>Echéance</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{% include 'JLMOfficeBundle:Bill:statelabel.html.twig' with {'state': entity.state} %}
            	<br><a href="{{ path('bill_show', { 'id': entity.id }) }}">{{ entity.number }}</a><br>
            </td>
            <td>{% if entity.creation %}{{ entity.creation|date('d/m/Y') }}{% endif %}</td>
            <td>{{ entity.trusteeName }}</td>
            <td>{{ entity.site | nl2br}}</td>
            <td>{{ entity.maturityDate | date('d/m/Y') }}</td>
            <td>{{ entity.totalPrice | number_format(2,',',' ')}} €</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="pagination pagination-centered">
	<ul>
	    <li{% if page == 1 %} class="disabled"{% endif %}><a href="{% if state is null%}{{ path('bill_page',{ 'page' : page-1 }) }}{% else %}{{ path('bill_state',{ 'state':state, 'page' : page-1 }) }}{% endif %}">«</a></li>
		{% for p in range(1,nbPages) %}
		<li{% if p == page %} class="active"{% endif %}><a href="{% if state is null%}{{ path('bill_page',{ 'page' : p }) }}{% else %}{{ path('bill_state',{ 'state':state, 'page' : p }) }}{% endif %}">{{ p }}</a></li>
		{% endfor %}
		<li{% if page == nbPages %} class="disabled"{% endif %}><a href="{% if state is null%}{{ path('bill_page',{ 'page' : page+1 }) }}{% else %}{{ path('bill_state',{ 'state':state, 'page' : page+1 }) }}{% endif %}">»</a></li>
	</ul>
</div>
<div class="form-actions">
<a href="{{ path('bill_new') }}" class="btn btn-primary"><i class="icon-plus-sign icon-white"></i> Créer une nouvelle facture</a>
</div>
{% endblock %}