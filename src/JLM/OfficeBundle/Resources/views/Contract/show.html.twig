{% extends "JLMOfficeBundle::layout.html.twig" %}

{% block content %}
<h1>Contrat n°{{ entity.number }}</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Début de contrat</th>
            <td>{{ entity.begin|date('d/m/Y') }}</td>
        </tr>
        {% if entity.endWarranty %}
        <tr>
            <th>Endwarranty</th>
            <td>{{ entity.endWarranty|date('d/m/Y') }}</td>
        </tr>
        {% endif %}
        {% if entity.end %}
        <tr>
            <th></th>
            <td>{{ entity.end|date('d/m/Y') }}</td>
        </tr>
        {% endif %}
        <tr>
            <th>Chiffre d'affaire</th>
            <td>{{ entity.turnover|number_format(2,',',' ') }} €</td>
        </tr>
    </tbody>
</table>

<h2>Porte</h2>

<div class="form-actions">
	<a href="{{ path('contract') }}" class="btn"><i class="icon-arrow-left"></i> Retour à la liste</a>
	<a href="{{ path('contract_edit', { 'id': entity.id }) }}" class="btn btn-warning"><i class="icon-pencil icon-white"></i> Editer</a>
</div>
{% endblock %}
