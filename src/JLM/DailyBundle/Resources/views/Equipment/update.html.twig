{# JLMDailyBundle:Shifting:edit.html.twig #}
{% extends "JLMDailyBundle::layout.html.twig" %}

{% block content %}
<h1>Récupération matériel</h1>
<form action="{{ path('equipment_update',{'id':entity.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
	<fieldset>
		{{ form_widget(form) }}
	    <div class="form-actions">
		   <a href="{{ previous }}" class="btn"><i class="icon-arrow-left"></i> Retour à la liste</a>
		   <button type="submit" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Enregistrer</button>
		</div>
	</fieldset>
</form>
{% endblock %}