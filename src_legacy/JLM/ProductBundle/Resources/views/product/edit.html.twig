{% extends "JLMModelBundle::layout.html.twig" %}
{% block content %}
{% if form_errors(edit_form) %}
<div class="alert">{{ form_errors(edit_form) }}</div>
{% endif %}
<h1>Edition d'un produit</h1>

<form action="{{ path('jlm_product_product_update', { 'id': entity.id }) }}" method="post" class="form-horizontal">
<fieldset>
    {{ form_widget(edit_form) }}
    <div class="form-actions">
	   <a href="{{ path('jlm_product_product') }}" class="btn">{{ 'arrow-left'|icon }} Retour Ã  la liste</a>
	   <button type="submit" class="btn btn-primary">{{ 'pencil'|icon(true) }} Enregistrer les modifications</button>
	</div>
</fieldset>
</form>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% javascripts
    	'@JLMProductBundle/Resources/public/js/product.js'
    	filter='yui_js' %}
    	<script src="{{ asset_url }}"></script>
{% endjavascripts %}
<script>
$("body").product();
</script>
{% endblock %}