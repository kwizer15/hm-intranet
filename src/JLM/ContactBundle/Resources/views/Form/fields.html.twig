{% block jlm_contact_person_widget %}
<div class="form-group">
  <label class="col-md-2 control-label">{{ form_label(form.lastName) }}</label>
  <div class="col-md-1">{{ form_widget(form.title, {'attr': {'class': 'input-small'}}) }}</div>
  <div class="col-md-4">{{ form_widget(form.firstName, {'attr': {'class': 'input-medium', 'placeholder': 'Prénom'}}) }}</div>
  <div class="col-md-5">{{ form_widget(form.lastName, {'attr': {'class': 'input-medium', 'placeholder': 'Nom'}}) }}</div>
</div>
{{ form_row(form.contact) }} 
{% endblock jlm_contact_person_widget %}

