{% block form_modal %}
{% spaceless %}
    {% for child in form %}
        {{ form_modal(child) }}
    {% endfor %}
{% endspaceless %}
{% endblock form_modal %}

{% block field_modal "" %}

{% block button_modal "" %}

{% block selectcontacttype_modal %}
{% spaceless %}
    <div id="{{ id }}_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="{{ id }}_modal_label" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="{{ id }}_modal_label">Contact</h3>
        </div>
        <div class="modal-body">
            <p>One fine body…</p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Fermer</button>
            <button class="btn btn-primary">Enregistrer</button>
        </div>
    </div>
    {% endspaceless %}
{% endblock selectcontacttype_modal %}