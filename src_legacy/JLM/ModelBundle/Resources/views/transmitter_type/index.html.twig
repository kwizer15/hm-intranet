{% extends "JLMModelBundle::layout.html.twig" %}
{% block content %}
<h1>Liste des types d'emetteurs</h1>

<ul>
    {% for entity in entities %}
	<li>
		<a href="#modalEdit{{ entity.id }}" role="button" data-toggle="modal">{{ entity.name }}</a>
		{{ render(controller('JLMModelBundle:TransmitterType:edit',{'id':entity.id})) }}
	</li>
    {% endfor %}
</ul>
<div class="form-actions">
<a href="#modalNew" class="btn btn-primary" role="button" data-toggle="modal">{{ 'plus-sign'|icon(true) }} Cr√©er un nouveau type d'emetteur</a>
{{ render(controller('JLMModelBundle:TransmitterType:new')) }}
</div>
{% endblock %}
