<form action="{{ path('shifting_update',{'id':entity.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h3 class="modal-title"  id="editTechnicianModal{{ entity.id }}Label">Déplacement de {{ entity.technician }}</h3>
	</div>
	<div class="modal-body">
		{{ form_widget(form) }}
	</div>
	<div class="modal-footer">
		<button class="btn btn-default" data-dismiss="modal">Fermer</button>
		<button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i> Enregistrer</button>
	</div>
</form>