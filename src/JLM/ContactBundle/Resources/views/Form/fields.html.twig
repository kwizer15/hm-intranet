    {{ form_widget(form, { 'attr': {'placeholder': 'Groupement', 'class': 'input-large'}}) }}
    <div class="btn-group">
    <a class="dropdown-toggle btn" data-toggle="dropdown" href="#">Nouvelle <b class="caret"></b></a>
    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
      <li><a id="{{ id }}_add-company" href="{{ path('jlm_contact_contact_new', {'id': 'company'}) }}">Société</a></li>
      <li><a id="{{ id }}_add-association" href="{{ path('jlm_contact_contact_new', {'id': 'association'}) }}">Association</a></li>
    </ul>
    </div>
    {% endspaceless %}
{% endblock %}

