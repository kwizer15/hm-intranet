{# JLMDailyBundle:Fixing:close.html.twig #}
{% extends "JLMDailyBundle::layout.html.twig" %}

{% block content %}
<h1>Cloturer un dépannage</h1>
<h4>{{ entity.place |nl2br }}</h4>
<div>{{ entity.reason }}</div>
<form action="{{ path('fixing_closeupdate', {'id':entity.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
<fieldset>
{{ form_widget(form) }}
    <div class="form-actions">
	   <a href="{{ path('fixing_list') }}" class="btn"><i class="icon-arrow-left"></i> Retour à la liste</a>
	   <button type="submit" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Enregistrer les modifications</button>
	</div>
	</fieldset>
</form>
{% endblock %}