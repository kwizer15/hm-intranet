<table class="table table-striped">
	<thead>
		<tr>
			<th>Affaire</th>
			<th>Installation</th>
			<th>Syndic</th>
			<th>Etat</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{% for door in doors %}
		<tr>
			<td><a href="{{ path('daily_door_show',{'id': door.id}) }}"><strong>{{ door.site.address.city.name | upper }}</strong> <small>{{ door.site.address.city.zip }}</small><br>{{ door.street | nl2br }}</a></td>
			<td>{{ door.type }}<br>{{ door.location }}</td>
			<td>{{ door.site.trustee }}</td>	
			<td>
				<span class="label">Prévoir entretien</span><br>
				<span class="label label-info">Travaux en préparation</span><br>
				{% if door.stopped %}<span class="label label-important">Mise à l'arrêt</span>{% endif %}
			</td>
			<td>
				<a href="{{  path('fixing_new',{'id': door.id}) }}" class="btn btn-danger"><i class="icon-wrench icon-white"></i></a>
				<a href="{{  path('work_new_door',{'id': door.id}) }}" class="btn btn-warning"><i class="icon-wrench icon-white"></i></a>
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>