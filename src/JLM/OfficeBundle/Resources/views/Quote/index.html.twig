{% extends "JLMOfficeBundle::layout.html.twig" %}

{% block content %}
<h1>Liste des devis</h1>

<table class="table table-stripped">
    <thead>
        <tr>
            <th>#</th>
            <th>Date</th>
            <th>Suivi par</th>
            <th>Affaire</th>
            <th>Syndic</th>
            <th>Total</th>
			<th></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('quote_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.creation %}{{ entity.creation|date('d/m/Y') }}{% endif %}</td>
            <td>{{ entity.followerCp }}</td>
            <td>{{ entity.doorCp | nl2br }}</td>
            <td>{{ entity.trusteeName }}</td>
            <td>{{ entity.totalPrice|number_format(2,',',' ') }} €</td>
            <td>
                <a href="{{ path('quote_show', { 'id': entity.id }) }}" class="btn"><i class="icon-eye-open"></i></a>
                <a href="{{ path('quote_edit', { 'id': entity.id }) }}" class="btn btn-warning"><i class="icon-white icon-pencil"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<div class="pagination pagination-centered">
	<ul>
	    <li{% if page == 1 %} class="disabled"{% endif %}><a href="{{ path('quote_page',{ 'page' : page-1 }) }}">«</a></li>
		{% for p in range(1,nbPages) %}
		<li{% if p == page %} class="active"{% endif %}><a href="{{ path('quote_page',{ 'page' : p }) }}">{{ p }}</a></li>
		{% endfor %}
		<li{% if page == nbPages %} class="disabled"{% endif %}><a href="{{ path('quote_page',{ 'page' : page+1 }) }}">»</a></li>
	</ul>
</div>
<div class="form-actions">
<a href="{{ path('quote_new') }}" class="btn btn-primary"><i class="icon-plus-sign icon-white"></i> Créer un nouveau devis</a>
</div>
{% endblock %}
