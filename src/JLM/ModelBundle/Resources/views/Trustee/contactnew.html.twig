{% extends "JLMOfficeBundle::layout.html.twig" %}

{% block content %}
<h1>Nouveau contact de syndic</h1>

{% form_theme form 'JLMOfficeBundle:Form:field_row.html.twig' %}

<form action="{{ path('trustee_contact_create',{'id':trustee.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <fieldset>
    {{ form_widget(form) }}
	<div class="form-actions">
	   <a href="{{ path('trustee_show',{'id':trustee.id}) }}" class="btn"><i class="icon-arrow-left"></i> Retour au syndic</a>
	   <button type="submit" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Enregistrer les modifications</button>
	</div>
</fieldset>
{% endblock %}

